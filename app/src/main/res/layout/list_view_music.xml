<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/lv_mv_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        app:shapeAppearanceOverlay="@style/curved"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/lv_mv_song_name"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_toStartOf="@id/lv_tv_song_duration"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/lv_mv_image"
        android:text="Song Name"/>

    <TextView
        android:id="@+id/lv_mv_album_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_toStartOf="@id/lv_tv_song_duration"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/lv_mv_image"
        android:text="Album Name"/>

    <TextView
        android:id="@+id/lv_tv_song_duration"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginHorizontal="5dp"

        android:text="00:00" />

</RelativeLayout>